<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/calculator_body"
        android:layout_width="300dp"
        android:layout_height="500dp"
        android:layout_centerInParent="true"
        app:cardBackgroundColor="@color/light_blue"
        app:cardCornerRadius="20dp"
        app:cardElevation="15dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/number_window"
                android:layout_width="240dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                app:cardBackgroundColor="@color/black"
                app:cardCornerRadius="12dp">
                <TextView
                    android:id="@+id/calculator_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="end|center"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:text="@string/calc_default"
                    android:textColor="@color/green"
                    android:textSize="30sp" />
            </androidx.cardview.widget.CardView>

            <RelativeLayout
                android:id="@+id/button_row_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/number_window"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="100dp"
                android:layout_marginEnd="30dp">

                <Button
                    android:id="@+id/value_button_7"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/roundstyle"
                    android:backgroundTint="@color/mint"

                    android:text="7" />
                <Button
                    android:id="@+id/value_button_8"
                    android:background="@drawable/roundstyle"
                    android:backgroundTint="@color/mint"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:layout_toEndOf="@+id/value_button_7"
                    android:text="8">
                </Button>
                <Button
                    android:id="@+id/value_button_9"
                    android:background="@drawable/roundstyle"
                    android:backgroundTint="@color/mint"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:layout_toEndOf="@+id/value_button_8"
                    android:text="9">
                </Button>
                <Button
                    android:id="@+id/calc_button_divide"
                    android:background="@drawable/roundstyle"
                    android:backgroundTint="@color/light_purple"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:layout_toEndOf="@+id/value_button_9"
                    android:text="/">
                </Button>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/button_row_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/button_row_1"
                android:layout_centerHorizontal="true"
                android:layout_marginEnd="30dp">

                <Button
                    android:id="@+id/value_button_4"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/roundstyle"
                    android:backgroundTint="@color/mint"
                    android:text="4" />
                <Button
                    android:id="@+id/value_button_5"
                    android:background="@drawable/roundstyle"
                    android:backgroundTint="@color/mint"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:layout_toEndOf="@+id/value_button_4"
                    android:text="5">
                </Button>
                <Button
                    android:id="@+id/value_button_6"
                    android:background="@drawable/roundstyle"
                    android:backgroundTint="@color/mint"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:layout_toEndOf="@+id/value_button_5"
                    android:text="6">
                </Button>
                <Button
                    android:id="@+id/calc_button_multiply"
                    android:background="@drawable/roundstyle"
                    android:backgroundTint="@color/light_purple"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:layout_toEndOf="@+id/value_button_6"
                    android:text="X">
                </Button>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/button_row_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/button_row_2"
                android:layout_centerHorizontal="true"
                android:layout_marginEnd="30dp">

                <Button
                    android:id="@+id/value_button_1"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/roundstyle"
                    android:backgroundTint="@color/mint"
                    android:text="1" />
                <Button
                    android:id="@+id/value_button_2"
                    android:background="@drawable/roundstyle"
                    android:backgroundTint="@color/mint"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:layout_toEndOf="@+id/value_button_1"
                    android:text="2">
                </Button>
                <Button
                    android:id="@+id/value_button_3"
                    android:background="@drawable/roundstyle"
                    android:backgroundTint="@color/mint"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:layout_toEndOf="@+id/value_button_2"
                    android:text="3">
                </Button>
                <Button
                    android:id="@+id/calc_button_minus"
                    android:background="@drawable/roundstyle"
                    android:backgroundTint="@color/light_purple"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:layout_toEndOf="@+id/value_button_3"
                    android:text="-">
                </Button>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/button_row_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/button_row_3"
                android:layout_centerHorizontal="true">


                <Button
                    android:id="@+id/value_button_0"
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/roundstyle"
                    android:backgroundTint="@color/mint"
                    android:text="0" />
                <Button
                    android:id="@+id/calc_button_add"
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/roundstyle"
                    android:backgroundTint="@color/light_purple"
                    android:layout_toEndOf="@+id/value_button_0"
                    android:text="+" />
                <Button
                    android:id="@+id/calc_button_equal"
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/roundstyle"
                    android:backgroundTint="@color/light_purple"
                    android:layout_toEndOf="@+id/calc_button_add"
                    android:text="=" />
            </RelativeLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>